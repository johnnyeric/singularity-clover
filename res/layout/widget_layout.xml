<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/widget_root"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="10dp"
  android:background="@drawable/widget_frame">
  	
  <TextView
  	android:id="@+id/widget_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:textStyle="bold"
  	android:ellipsize="marquee"
    android:singleLine="true"
    android:maxWidth="180dp"	
    android:textSize="16dp"
    android:padding="14dp"
    android:textColor="#ffffffff"
    android:hint ="@string/widget_title_hint"
    android:textColorHint="#ffffffff"
    />
    
   <ImageView
   	android:id="@+id/widget_divider"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_marginLeft="12dp"
  	android:layout_marginRight = "20dp"
  	android:layout_marginTop="-5dp"
  	android:layout_below="@+id/widget_title"
  	android:background="@drawable/widget_divider"
  	/>
    
   <ImageButton 
   	android:id ="@+id/widget_obj_ctrl1"
   	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@+id/widget_title"
  	android:layout_alignLeft="@+id/widget_title"
  	android:layout_marginLeft="15dp"
  	android:background="#00ffffff"
  	/>
  	
   <TextView
   	android:id ="@+id/widget_obj_content1"
   	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@+id/widget_obj_ctrl1"
  	android:layout_alignBottom="@+id/widget_obj_ctrl1"
  	android:layout_marginBottom="7dp"
  	android:layout_marginLeft="5dp"
  	android:textColor="#ffffffff"
  	android:layout_gravity="center"
  	android:ellipsize="marquee"
    android:singleLine="true"
    android:maxWidth="160dp"
    android:textStyle="bold"
  	/>
  	
  <ImageButton 
   	android:id ="@+id/widget_obj_ctrl2"
   	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@+id/widget_obj_ctrl1"
	android:layout_toRightOf="@+id/widget_obj_content2"
 	android:layout_marginLeft="5dp"
  	android:background="#00ffffff"
  	/>
  	
   <TextView
   	android:id ="@+id/widget_obj_content2"
   	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_alignLeft="@+id/widget_obj_ctrl1"
  	android:layout_alignBottom="@+id/widget_obj_ctrl2"
  	android:layout_marginBottom="7dp"
  	android:layout_gravity="center"
  	android:textColor="#ffffffff"
  	android:ellipsize="marquee"
    android:singleLine="true"
    android:maxWidth="160dp"
    android:textStyle="bold"
  	/>
  	
  <ImageButton 
   	android:id ="@+id/widget_obj_ctrl3"
   	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_below="@+id/widget_obj_ctrl2"
  	android:layout_alignLeft="@+id/widget_obj_content2"
  	android:background="#00ffffff"
  	/>
  	
   <TextView
   	android:id ="@+id/widget_obj_content3"
   	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@+id/widget_obj_ctrl3"
  	android:layout_alignBottom="@+id/widget_obj_ctrl3"
  	android:layout_marginBottom="7dp"
  	android:layout_marginLeft="5dp"
  	android:layout_gravity="center"
  	android:textColor="#ffffffff"
  	android:ellipsize="marquee"
    android:singleLine="true"
    android:maxWidth="160dp"
    android:textStyle="bold"
  	/>	
  	
  <ImageView
   	android:id="@+id/widget_divider2"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_marginLeft="12dp"
  	android:layout_marginRight = "10dp"
  	android:layout_toLeftOf="@+id/widget_timer"
  	android:layout_alignTop="@+id/widget_timer"
  	android:layout_marginTop="32dp"
  	android:background="@drawable/widget_divider"
  	/>
  	
  <TextView
  	android:id ="@+id/widget_text_date"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="18dp"
	android:layout_marginBottom="7dp"
  	android:layout_gravity="center"
  	android:textColor="#ffffffff"
  	android:textStyle="bold"
  	/>
   	
   <ImageButton 
  	android:id="@+id/widget_next"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_alignParentRight="true"
  	android:layout_centerVertical="true"
  	android:background="@drawable/widget_next"
  	android:visibility="invisible"
  	/>
  	
  <ImageButton
  	android:id="@+id/widget_prev"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_alignParentLeft="true"
  	android:layout_centerVertical="true"
  	android:background="@drawable/widget_prev"
  	android:visibility="invisible"
  	/>
  	
  <ImageButton
  	android:id="@+id/widget_home"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_alignParentTop="true"
  	android:layout_centerHorizontal="true"
  	android:background="@drawable/widget_home"
  	android:visibility="invisible"
  	/>
  	
  <ImageButton
  	android:id ="@+id/widget_timer"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_alignParentBottom = "true"
  	android:layout_alignParentRight="true"
  	android:src="@drawable/widget_timer_off"
  	android:background="#00ffffff"
  	android:padding="10dp"
  	/>
</RelativeLayout>
