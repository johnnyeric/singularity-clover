<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/task_view_basic_info_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
  <LinearLayout
  	android:id="@+id/task_view_basic_info_name_layout"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content">
  	
  <EditText
  	android:id ="@+id/task_view_basic_info_name"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:hint="@string/task_view_title"
  	android:longClickable="false"
  	android:background="@drawable/task_view_edit_bg"
  	android:textStyle="bold"
  	android:textSize="25sp"
  	android:typeface="serif"
  	/>
  	
  	</LinearLayout>
  	
  <TextView
  	android:id="@+id/task_view_basic_info_other"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_marginTop="3dp"
  	android:longClickable="false"
  	android:text="info"
  	android:typeface="serif"
  	android:textColor="#ff6A6A6D"
  	android:textSize="12sp"
  	/>
  	
</LinearLayout>
